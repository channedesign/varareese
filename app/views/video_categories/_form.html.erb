
<%= link_to((fa_icon 'arrow-left') + "      Manage Video", admins_video_path , class: "btn btn-default") %>
	<div class="row marginTop">
		<div class="col-md-6 col-md-offset-3">
			<%= simple_form_for @video_cat do |f| %>
			<%= f.input :name %>
			<%= f.input :position, collection: 1..@video_cats.length %>
			<% if @video_cat.image.present? %>
				<%= image_tag(@video_cat.image, class: "video_category_image") %>
			<% end %>
			<%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
			<%= f.submit(@video_cat.new_record? ? "Add New Category" : "Edit Category", class: "btn btn-default" )  %>
			<% end %>
		</div>
	</div>

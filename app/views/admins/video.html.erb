<%= render template: "shared/admins_header" %>
<div class="container">
	<div class="row center">
		<div class="col-md-6">
			<h3>Upload Your Video</h3>
			<div class="well center marginTopMin">
				<%= render template: "videos/new" %>
			</div>
		</div>
		<div class="col-md-6">
			<h3>Edit Your Video</h3>
			<ul class="nav nav-tabs">
				<li class="active"><a data-toggle="tab" data-target="#all_videos">All Videos</a></li>
				<li><a data-toggle="tab" data-target="#fashion_video">Fashion</a></li>
				<li><a data-toggle="tab" data-target="#editorial_video">Editorial</a></li>
				<li><a data-toggle="tab" data-target="#behind_video">Behind The Scenes</a></li>
				<li><a data-toggle="tab" data-target="#week_video">Fashion Week</a></li>
				<li><a data-toggle="tab" data-target="#short_video">Short</a></li>
			</ul>
			<div class="tab-content" id="video_tab">
				<div id="all_videos" class="tab-pane fade in active">
					<%= render("admins/tab", var: @videos) %>
				</div>
				<div id="fashion_video" class="tab-pane fade">
					<%= render("admins/tab", var: @videos_fashion) %>
				</div>
				<div id="editorial_video" class="tab-pane fade">
					<%= render("admins/tab", var: @videos_editorial) %>
				</div>
				<div id="behind_video" class="tab-pane fade">
					<%= render("admins/tab", var: @videos_behind) %>
				</div>
				<div id="week_video" class="tab-pane fade">
					<%= render("admins/tab", var: @videos_week) %>
				</div>
				<div id="short_video" class="tab-pane fade">
					<%= render("admins/tab", var: @videos_short) %>
				</div>
			</div>
		</div>
	</div>
</div>
			



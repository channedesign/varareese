<%= render template: "shared/admins_header" %>
<div class="container">
	<div class="row center">
		<div class="col-md-6">
			<h3>Upload Your Photo</h3>
			<%= render template: "photos/new", class: "center"%>
		</div>
		<div class="col-md-6">
			<h3>Edit Your Photo</h3>
			<ul class="nav nav-tabs">
				<li class="active"><%= link_to("All Photos", "", data: { toggle: "tab", target: "#all_photos"}) %></li>
				<% @photo_cats.each do |cat| %>
					<li><%= link_to(cat.name, "", data: { toggle: "tab", target: "#" + cat.name.delete(" ") + "_photos"}) %></li> 
				<% end %>
				<li><%= link_to((fa_icon "plus"), new_photo_category_path, data: { toggle: "", target: "" }) %></li>
			</ul>
			<div class="tab-content" id="photo_tab">
				<div id="all_photos" class="tab-pane fade in active">
					<%= render("admins/tab_photo", var: @photos) %>
				</div>
				<% @photo_cats.each do |cat| %>
					<div id="<%= cat.name.delete(" ") %>_photos" class="tab-pane fade">
						<%= render("admins/tab_photo", var: cat.photos.order("position ASC")) %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
			
			
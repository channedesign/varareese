<%= javascript_tag "function owlPhoto(x) {
		x.owlCarousel({
			autoplay: 3000,
			items: 5,
			pagination: false,
			loop: true,
			autoplayHoverPause: true,
			responsive: {
				0: {
					items: 2
				},
				768: {
					items: 4
				},
				990: {
					items: 5
				}
			}
		});
	}" %>

<div id="photo">
	<div class="exo_container_photo">
		<div class="container light_bakground">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 center marginTopMin">
					<h1>Photo</h1>
					<p class="lead"><%= @photo_show.intro_text %></p>
				</div>
				<div class="marginTopMin col-md-8 col-md-offset-2">
					<% if @photo_show.present? %>
						<%= image_tag( @photo_show.photo, class:"vara_big_pic") %>
					<% end %>
				</div>
				<div class="hide_in_mobile_view push_left">
					<% @photo_cats.each do |cat| %>
					<div class="marginTopMin col-xs-4">
						<div class="view view-tenth">
							<%= image_tag(cat.image.url(:thumb), class: "video_category_image_index") %>
							<%= link_to('<div class="mask"><h2>'.html_safe + cat.name + '</h2></div>'.html_safe, "##{cat.name.delete(' ')}" ) %> 
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<% @photo_cats.each do |cat| %>
		<% if cat.photos.present? %>
			<%= render "photos/anchor", title: cat.name.delete(" "), var: cat.photos , big_title: cat.name  %>
		<% end %>
	<% end %>
</div>
	
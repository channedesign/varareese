<%= javascript_tag "function owlPhoto(x) {
		x.owlCarousel({
			autoplay: 3000,
			items: 5,
			pagination: false,
			loop: true,
			autoplayHoverPause: true,
			responsive: {
				0: {
					items: 3
				},
				768: {
					items: 4
				},
				990: {
					items: 5
				}
			}
		});
	}" %>

<div id="photo">
	<div class="exo_container_photo">
		<div class="container light_bakground fullHeight_photo">
			<div class="row">
				<div class="col-md-12 center marginTopMin">
					<h1>Photo</h1>
					<p class="lead">It all started here. I began as a professional photographer and eventually branched into the motion picture world. Even though my central focus is video, I still love still photography and offer photo services which include head shots, events and weddings.</p>
				</div>
				<div class="marginTopMin col-md-8 col-md-offset-2">
					<%= image_tag( @photo_show.photo, class:"vara_big_pic") %>
					<div class="marginTopMin"></div>
				</div>
			</div>
		</div>
	</div>

	<% @photo_cats.each do |cat| %>
		<%= render "photos/anchor", title: cat.name.delete(" "), var: cat.photos , big_title: cat.name  %>
	<% end %>
</div>
	